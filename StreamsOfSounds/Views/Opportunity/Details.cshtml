@model Opportunity
@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
</head>
<style>
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }
</style>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <hr>
        <div>
            <h2>@Model.Name</h2>
            <p><strong>Date and Time:</strong> @Model.StartTime.ToString("dddd, MMMM dd, yyyy") at @Model.StartTime.ToString("h:mm tt") - @Model.EndTime.ToString("h:mm tt")</p>
            <p><strong>Location:</strong> @Model.Address, @Model.City, @Model.State @Model.Zip</p>
        </div>
        <div>
            <h3>Description</h3>
            <p>@Model.Description</p>
        </div>
        <div>
            <h3>Event Details</h3>
            <p><strong>Available Slots:</strong> @Model.SlotsAvailable</p>
            <p><strong>Slots Openings:</strong> @Model.SlotsOpenings</p>
        </div>
    </div>
</body>
</html>