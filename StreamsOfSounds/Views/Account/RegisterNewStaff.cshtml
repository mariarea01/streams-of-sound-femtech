@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal
@model CreateNewStaff

<h1>Register a New Streams of Sound Staff Member</h1>

<div class="row">
    <div class="col-md-10">
        <form id="registerForm" method="post">
            <h2>Create a new Streams of Sound account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <label asp-for="@Model.LastName"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="@Model.positionInCompany" class="form-control"aria-required="true" />
                <label asp-for="@Model.positionInCompany"></label>
                <span asp-validation-for="@Model.positionInCompany" class="text-danger"></span>
            </div>
            <div class="whiteButtonText">
                <button id="registerSubmit" type="submit" class="block">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}