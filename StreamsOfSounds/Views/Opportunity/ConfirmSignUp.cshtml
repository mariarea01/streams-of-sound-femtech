@model StreamsOfSound.Models.ViewModel.ConfirmSignUpViewModel

<h1>Confirm Sign Up</h1>
<body>

        <table>
            <tr>Confirm Sign Up Table</tr>
            <tr>
                <td>User ID: </td>
                <td>@Model.UserId.Id</td>
            </tr>
            <tr>
                <td>Opp ID: </td>
                <td>@Model.Opportunity.Id</td>
            </tr>
            <tr>
                <td>First Name: </td>
                <td>@Model.UserId.FirstName</td>
            </tr>
            <tr>
                <td>Last Name: </td>
                <td>@Model.UserId.LastName
            </tr>
            <tr>
                <td>Email: </td>
                <td>@Model.UserId.Email
            </tr>
            <tr>
                <td>Opportunity Name: </td>
                <td>@Model.Opportunity.Name
            </tr>
            <tr>
                <td>Opportunity Address: </td>
                <td>@Model.Opportunity.Address
            </tr>
            <tr>
                <td>Opportunity City: </td>
                <td>@Model.Opportunity.City
            </tr>
            <tr>
                <td>Opportunity State: </td>
                <td>@Model.Opportunity.State
            </tr>
            <tr>
                <td>Opportunity Zip: </td>
                <td>@Model.Opportunity.Zip
            </tr>
            <tr>
                <td>Opportunity Start Time: </td>
                <td>@Model.Opportunity.StartTime
            </tr>
            <tr>
                <td>Opportunity End Time: </td>
                <td>@Model.Opportunity.EndTime
            </tr>
        </table>
    <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("ConfirmSignUp", "Opportunity")'">Confirm</button>
</body>